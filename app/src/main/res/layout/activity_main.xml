<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Primer LinearLayout en horizontal -->

    <!-- Segundo LinearLayout que aparecerÃ¡ debajo del primero -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:src="@drawable/sena" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Etapa\nProductiva"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dayana" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#009E00"
        android:padding="8dp">

        <!-- Contenedor para el ImageButton y TextView -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:background="?android:attr/selectableItemBackground"
                android:tint="#FFFFFF"
                app:srcCompat="@drawable/notificaciones" />

            <TextView
                android:id="@+id/notificationCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_background"
                android:text="5"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:padding="4dp"
                android:layout_marginStart="5dp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Botones centrados -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageButton5"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/button2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#00FFFFFF"
                android:gravity="center"
                android:text="Inicio" />

            <Button
                android:id="@+id/button3"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#00FFFFFF"
                android:gravity="center"
                android:text="Calendario" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>

